import java.util.Scanner;
public class Question4 {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        //Print choices
        System.out.println("Temperature Converter");
        System.out.println("1. Celsius to Fahrenheit");
        System.out.println("2. Fahrenheit to Celsius");
        System.out.println("Enter Choice: ");
        int choice = scanner.nextInt();

        //IF ELSE, User input temperature in fahrenheit or celsius

        if (choice == 1) {
            System.out.print("Enter Temperature in Celsius: ");
            double celsius = scanner.nextDouble();
            double fahrenheit = celsiusToFahrenheit(celsius);
            System.out.println(celsius + "째C is equal to " + fahrenheit + "째F");
        } else if (choice == 2) {
            System.out.print("Enter Temperature in Fahrenheit: ");
            double fahrenheit = scanner.nextDouble();
            double celsius = fahrenheitToCelsius(fahrenheit);
            System.out.println(fahrenheit + "째F is equal to " + celsius + "째C");
        } else {
            System.out.println("Invalid choice. Enter 1 or 2");
        }

        scanner.close();
    }

    //Method celsiusToFahrenheit
    public static double celsiusToFahrenheit(double celsius) {
        return (celsius * 9/5) + 32;
    }

    //Method fahrenheitToCelsius
    public static double fahrenheitToCelsius(double fahrenheit) {
        return (fahrenheit - 32) * 5/9;
    }

}
