import java.util.Scanner;
public class Question9 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        //Menu

        while (true) {
            System.out.println("Shapes Calculator");
            System.out.println("1. Square");
            System.out.println("2. Rectangle");
            System.out.println("3. Triangle");
            System.out.println("4. Circle");
            System.out.println("5. Exit");
            System.out.println("Enter choice: ");

            //Obtain user's choice
            int choice = scanner.nextInt();

            //Cases menu

            switch (choice) {
                case 1:
                    Square();
                    break;
                case 2:
                    Rectangle();
                    break;
                case 3:
                    Triangle();
                    break;
                case 4:
                    Circle();
                    break;
                case 5:
                    System.out.println("Exiting Calculator");
                    scanner.close();
                    System.exit(0);
                default:
                    System.out.println("Invalid choice");
            }
        }
    }

    //Method to calculate area and perimeter of square

    private static void Square() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Square side length: ");
        double sideLength = scanner.nextDouble();

        double area = sideLength * sideLength;
        double perimeter = 4 * sideLength;

        System.out.println("Area: " + area + " Perimeter: " + perimeter);
    }

    //Method to calculate area and perimeter of a rectangle
    private static void Rectangle() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Rectangle length: ");
        double length = scanner.nextDouble();
        System.out.print("Rectangle width");
        double width = scanner.nextDouble();

        double area = length * width;
        double perimeter = 2 * (length + width);

        System.out.println("Area: " + area + "Perimeter: " + perimeter);
    }

    //Method to calculate area of a triangle
    private static void Triangle() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Triangle base length: ");
        double base = scanner.nextDouble();
        System.out.print("Triangle height: ");
        double height = scanner.nextDouble();

        double area = 0.5 * base * height;

        System.out.println("Area: " + area);
    }

    //Method to calculate area of circle
    private static void Circle() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Circle radius: ");
        double radius = scanner.nextDouble();

        double area = Math.PI * radius * radius;

        System.out.println("Area: " + area);
    }
}
